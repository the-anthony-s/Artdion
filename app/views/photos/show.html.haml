%section(class="photoUser")
  %div(class="container")
    %div(class="photoUser-container")
      %div(class="photoUser-left")
      %div(class="photoUser-right")

%section(class="photoView")
  %div(class="photoView-container")
    %div(class="photoView-media")
      = photo(@photo)


%section.photoNav
  %div.photoNav-container
    %div.photoNav-left
      = render partial: 'users/shared/user-mini', locals: { user: @photo.user }
    %div.photoNav-right
      %div.photoNav-options
        %div.photoNav-option(id="Photo#{@photo.id}")
          = render partial: 'photos/likes', locals: { photo: @photo }
        %div.photoNav-option
          = link_to @photo.talk, title: @photo.talk.name, class: 'btnAction' do
            %span.btnAction-icon= icon 'fad', 'comments-alt'
            %span.btnAction-content= formatted_number(@photo.talk.comments_count)

