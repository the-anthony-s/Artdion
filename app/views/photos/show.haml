%section(class="photoUser")
  %div(class="container")
    %div(class="photoUser-container")
      %div(class="photoUser-left")
      %div(class="photoUser-right")

%section(class="photoView" id="Photo#{@photo.id}")
  %div(class="photoView-container")
    %div(class="photoView-media")
      = photo_view(@photo)

%section(class="photoNav")
  %div(class="container")
    %div(class="photoNav-container")
      %div(class="photoNav-left")
        = render partial: 'users/shared/user-mini', locals: { user: @photo.user }
      %div(class="photoNav-right") 
        %div(class="photoNav-action")
          = button_tag class: 'btnAction' do
            = icon "fas", "user-plus"
        %div(class="photoNav-action")
          = button_tag class: 'btnAction' do
            = icon "fas", "heart"
        %div(class="photoNav-action")
          = button_tag class: 'btnAction' do
            = icon "fas", "share"
        %div(class="photoNav-action")
          = button_tag class: 'btnAction' do
            %span(class="btnAction-icon")= icon "fas", "download"
            %span(class="btnAction-text") Download
        %div(class="photoNav-action")
          = button_tag class: 'btnAction' do
            Buy

%section(class="photoAbout")
  %div(class="container")
    %div(class="photoAbout-container")
      %div(class="photoAbout-name")
        %h1(class="text text--h3")= @photo.name
      %div(class="photoAbout-description")
        = simple_format(@photo.description, class: 'text text--paragraph text--small')
      
      %div(class="photoAbout-details")
        %div(class="photoAbout-detail")
          %p(class="text text--small text-color-secondary fw-medium") Type
          = link_to @photo.type.name, @photo.type, class: 'text text--body fw-medium'
        
        %div(class="photoAbout-detail")
          %p(class="text text--body text-color-secondary fw-medium") Date
          %p(class="text text--body fw-medium") 2020
        
        %div(class="photoAbout-detail")
          %p(class="text text--body text-color-secondary fw-medium") Size
          %p(class="text text--body fw-medium") 2000 cm x 4500 cm

        %div(class="photoAbout-detail")
          %p(class="text text--body text-color-secondary fw-medium") Location
          %p(class="text text--body fw-medium")= @photo.location

- if @related.any?
  %section(class="photoRelated")
    %div(class="photoHeading")
      %div(class="container")
        %h4(class="text text--large fw-medium") Related photos
    %div(class="container")
      %div(class="grid grid--photosRelated")
        = render partial: 'photos/photo', collection: @related, locals: { show_info: false }

- if @tags.any?
  %section(class="photoTags")
    %div(class="photoHeading")
      %div(class="container")
        %h4(class="text text--large fw-medium") Related tags
    %div(class="container")
      %div(class="tags")
        = render partial: 'tags/tag', collection: @tags



