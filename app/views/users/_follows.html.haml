- if user_signed_in?
  - if current_user.follows?(user)
    = link_to user_follow_path(user), method: :delete, remote: true, class: 'btnAction btnAction--followed' do
      %span.btnAction-icon= icon 'fas', 'user-check'
  - else
    = link_to user_follow_path(user), method: :post, remote: true, class: 'btnAction btnAction--follow' do
      %span.btnAction-icon= icon 'fas', 'user-plus'
- else
  = link_to new_user_registration_path, class: 'btnAction btnAction--follow' do
    %span.btnAction-icon= icon 'fas', 'user-plus'